{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    // "baseUrl": ".",
    "types": ["node"],
    "paths": {},
    "outDir": "lib",
    "lib": ["es2020"],
    "typeRoots": [
      "./node_modules/@types",
      "packages/genshin-kit/src/types",
      "packages/genshin-gacha-kit/types"
    ],
    "declaration": true
    // "noImplicitThis": false
  },
  "include": [
    "packages/genshin-kit/src",
    "packages/genshin-gacha-kit/src"
    // "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "**/dist"]
}
